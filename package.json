{
  "name": "gemini-image-downloader",
  "version": "1.0.0",
  "description": "Download images from public Google Gemini chat links",
  "author": "Gemini Downloader Team",
  "type": "commonjs",
  "bin": "download-gemini-images.js",
  "main": "electron-main.js",
  "scripts": {
    "start": "node download-gemini-images.js",
    "electron:dev": "electron electron-main.js",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac"
  },
  "dependencies": {
    "fs-extra": "^11.3.3",
    "path": "^0.12.7",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "pkg": "^5.8.1"
  },
  "build": {
    "appId": "com.geimidown.app",
    "productName": "Gemini Image Downloader",
    "icon": "assets/icon.svg",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "renderer/**/*",
      "download-gemini-images.js",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "compression": "maximum"
  }
}