{
  "name": "gemini-image-downloader",
  "version": "1.0.0",
  "description": "Download images from public Google Gemini chat links",
  "author": "Gemini Downloader Team",
  "type": "commonjs",
  "bin": "download-gemini-images.js",
  "main": "electron-main.js",
  "scripts": {
    "start": "node download-gemini-images.js",
    "electron:dev": "electron electron-main.js",
    "generate:icon": "node scripts/generate-icon.js",
    "build": "electron-builder --publish never",
    "package-win": "npm run generate:icon && electron-builder --win --publish never",
    "package-mac": "npm run generate:icon && electron-builder --mac --publish never",
    "package-linux": "npm run generate:icon && electron-builder --linux --publish never",
    "dist": "npm run generate:icon && electron-builder -mwl",
    "dist:win": "npm run generate:icon && electron-builder --win",
    "dist:mac": "npm run generate:icon && electron-builder --mac"
  },
  "dependencies": {
    "fs-extra": "^11.3.3",
    "path": "^0.12.7",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "canvas": "^3.2.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "pkg": "^5.8.1",
    "png-to-ico": "^3.0.1"
  },
  "build": {
    "appId": "com.geimidown.app",
    "productName": "Gemini Image Downloader",
    "asar": true,
    "asarUnpack": [
      "node_modules/playwright/**/*",
      "node_modules/playwright-core/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "automation-runner.js",
      "automation-store.js",
      "renderer/**/*",
      "download-gemini-images.js",
      "node_modules/**/*",
      "package.json"
    ],
    "artifactName": "Gemini-Image-Downloader-${version}-Setup.${ext}",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gemini Image Downloader"
    },
    "compression": "maximum"
  }
}
